<p id="notice"><%= notice %></p>

<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Артикул</th>
      <th>Название</th>
      <th>original_id</th>
      <th>Вес сортировки</th>
      <th>Изображения</th>
      <th>Строка параметров:</th>
      <th>Строка свойств:</th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.scu %></td>
        <td><%= offer.title %></td>
          <td><%= offer.original_id %></td>
         <td><%= offer.sort_weight %></td>
          <td><%= offer.image_status %></td>

        <td><%= offer.flat %></td>
        <td><%= offer.variants.first.try(:flat) %></td>
        <td><%= link_to 'Show', [offer.compare.site,offer] %></td>
        <td><%= link_to 'Edit', [:edit,offer.compare.site,offer] %></td>
        <td><%= link_to 'Destroy',[offer.compare.site,offer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New offer',  new_site_offer_path(:compare => params[:compare]) %>