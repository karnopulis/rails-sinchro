<p id="notice"><%= notice %></p>

<h1>Listing Offer Imports</h1>
<%= paginate @offer_imports %>
<table>
  <thead>
    <tr>
      <th>Артикул</th>
      <th>Название</th>
      <th>Вес сортировки</th>
       <th>Изображения</th>
      <th>Количество</th>
      <th>Строка параметров:</th>
      <th>Строка цен:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offer_imports.each do |offer_import| %>
      <tr>
        <td><%= offer_import.scu %></td>
        <td><%= offer_import.title %></td>
        <td><%= offer_import.sort_order %></td>
        <td><%= offer_import.image_status %></td>
        <td><%= @variant_imports.where(:scu => offer_import.scu).first.quantity %></td>
        <td><%= offer_import.prop_flat %></td>
        <td><%= @variant_imports.where(:scu => offer_import.scu).first.pric_flat %></td>
        <td><%= link_to 'Show', [offer_import.compare.site,offer_import] %></td>
        <td><%= link_to 'Edit', [:edit,offer_import.compare.site,offer_import] %></td>
        <td><%= link_to 'Destroy', [offer_import.compare.site,offer_import], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @offer_imports %>

<br>

